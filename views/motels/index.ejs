<% layout('layouts/boilerplate') %>
   
  <div class="container">
    <h1>All Motels</h1>
    <div>
        <a href="/motels/new">Add Motels</a>
    </div>
    <ul>
       
           <% for (let motel of motels){%>
               <div class="card mb-3">
                 <div class="row">
                    <div class="col-md-4">
                       <% if(motel.images.length){ %>
                        <img crossorigin="anonymous" src="<%=motel.images[0].url %>" alt="" class="img-fluid">
                         <% }else{ %>
                          <img crossorigin="anonymous" class="img-fluid" src="https://res.cloudinary.com/douqbebwk/image/upload/v1600103881/YelpCamp/lz8jjv2gyynjil7lswf4.png" alt="">
                          <% } %>
                      </div>
                    <div class="col-md-8">
                          <div class="card-body">
                            <h5 class="card-title"><%=motel.title %></h5>
                            <p class="card-text"><%=motel.description%></p>
                            <p class="card-text">
                                <small class="text-muted"><%=motel.location %></small>
                            </p>
                            <a class="btn btn-primary" href="/motels/<%=motel._id %>" >View <%=motel.title %></a>
                          </div>
                    </div>
                 </div>
               </div>
            <% }%>
   </ul>
  </div>

 

